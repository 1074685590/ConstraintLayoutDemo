<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/app_logo"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginTop="100dp"
               android:background="@color/colorAccent"
               app:layout_constraintEnd_toEndOf="@id/constraintLayout"
               app:layout_constraintStart_toStartOf="@id/constraintLayout"
               app:layout_constraintTop_toTopOf="@id/constraintLayout"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/con_login"
        android:background="#fff"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/app_logo"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_username"
                  android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toTopOf="@id/con_login"
                  app:layout_constraintStart_toStartOf="@id/con_login"
                  android:text="用户名"
                  />
        <EditText android:id="@+id/ed_pwd"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="20dp"
                  android:background="null"
                  android:textSize="14sp"
                  android:hint="请输入用户名"
                  app:layout_constraintBottom_toBottomOf="@id/tv_username"
                  app:layout_constraintEnd_toEndOf="@id/con_login"
                  app:layout_constraintStart_toEndOf="@id/tv_username"/>
        <View android:layout_width="match_parent"
              android:background="#999"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              app:layout_constraintStart_toStartOf="@id/con_login"
              app:layout_constraintEnd_toEndOf="@id/con_login"
              app:layout_constraintTop_toBottomOf="@id/tv_username"
              android:layout_marginTop="5dp"
              android:layout_height="0.5dp"/>
        <TextView android:id="@+id/tv_pwd"
                  android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:layout_marginTop="10dp"
                  android:text="密码"
                  android:layout_marginBottom="10dp"
                  app:layout_constraintBottom_toBottomOf="@id/con_login"
                  app:layout_constraintStart_toStartOf="@id/con_login"
                  app:layout_constraintTop_toBottomOf="@id/tv_username"/>
        <EditText android:id="@+id/ed_username"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="20dp"
                  android:background="null"
                  android:hint="请输入密码"
                  android:textSize="14sp"
                  app:layout_constraintBottom_toBottomOf="@id/tv_pwd"
                  app:layout_constraintEnd_toEndOf="@id/con_login"
                  app:layout_constraintStart_toEndOf="@id/tv_pwd"/>
    </android.support.constraint.ConstraintLayout>

    <Button android:layout_width="match_parent"
            android:text="登录"
            android:id="@+id/btn_login"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/con_login"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="#FA4B07"
            android:layout_height="40dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="找回密码"
              android:id="@+id/tv_find_pwd"
              android:textSize="12sp"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@id/btn_login"
              app:layout_constraintStart_toStartOf="@id/btn_login"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="手机号注册?"
              app:layout_constraintTop_toTopOf="@id/tv_find_pwd"
              app:layout_constraintEnd_toEndOf="@id/btn_login"
              android:textSize="12sp"
              android:textColor="#FA4B07"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="更多登录方式"
              app:layout_constraintBottom_toTopOf="@id/iv_wechat"
              app:layout_constraintStart_toStartOf="@id/constraintLayout"
              app:layout_constraintEnd_toEndOf="@id/constraintLayout"
              android:layout_marginBottom="10dp"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="30dp"
               android:id="@+id/iv_wechat"
               app:layout_constraintBottom_toBottomOf="@id/constraintLayout"
               app:layout_constraintStart_toStartOf="@id/constraintLayout"
               app:layout_constraintEnd_toEndOf="@id/constraintLayout"
               android:layout_marginBottom="60dp"
               android:background="@color/colorAccent"
               android:layout_height="30dp"/>
</android.support.constraint.ConstraintLayout>